# API Security
API_KEY=your-secret-api-key-here

# Database
# For SQLite (default): leave empty or use sqlite:///windmill.db
# For PostgreSQL: postgresql://user:password@host:port/dbname
DATABASE_URL=

# CORS (comma-separated origins, use * for all)
CORS_ORIGINS=*

# Offline threshold (seconds)
OFFLINE_THRESHOLD_SECONDS=300

# Flask environment
FLASK_ENV=production

# Port (Zeabur sets this automatically)
PORT=5000
